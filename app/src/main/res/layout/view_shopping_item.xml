<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="observer"
            type="com.attrecto.room.ShoppingListAdapter.Observer" />
        <variable
            name="content"
            type="com.attrecto.room.data.ShoppingListItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeight"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:onClick="@{() -> observer.onClick(content)}">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{content.icon}"
            tools:src="@drawable/ic_local_florist_black_24dp"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{content.name}"

            tools:text="name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{content.quantity}"
            android:layout_marginStart="@dimen/margin"
            tools:text="1" />

    </LinearLayout>
</layout>